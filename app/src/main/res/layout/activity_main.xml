<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/austria"
        android:layout_width="@dimen/standard_flag_length"
        android:layout_height="@dimen/standard_flag_width"
        android:layout_marginStart="@dimen/default_margin"
        android:layout_marginTop="@dimen/default_margin"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/red_austria" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/white" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/red_austria" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/poland"
        android:layout_width="@dimen/standard_flag_length"
        android:layout_height="@dimen/standard_flag_width"
        android:layout_marginStart="@dimen/default_margin"
        android:layout_marginTop="@dimen/default_margin"
        android:orientation="vertical"
        app:layout_constraintStart_toEndOf="@id/austria"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/red_poland" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/white" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/italy"
        android:layout_width="@dimen/standard_flag_length"
        android:layout_height="@dimen/standard_flag_width"
        android:layout_marginStart="@dimen/default_margin"
        android:layout_marginTop="@dimen/default_margin"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/austria">

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/green_italy" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/red_italy" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/colombia"
        android:layout_width="@dimen/standard_flag_length"
        android:layout_height="@dimen/standard_flag_width"
        android:layout_marginStart="@dimen/default_margin"
        android:layout_marginTop="@dimen/default_margin"
        android:orientation="vertical"
        app:layout_constraintStart_toEndOf="@id/italy"
        app:layout_constraintTop_toBottomOf="@id/austria">

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/yellow_columbia" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:background="@color/blue_colombia" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:background="@color/red_colombia" />
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/madagascar"
        android:layout_width="@dimen/standard_flag_length"
        android:layout_height="@dimen/standard_flag_width"
        android:layout_marginStart="@dimen/default_margin"
        android:layout_marginTop="@dimen/default_margin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/italy">

        <LinearLayout
            android:layout_width="@dimen/standard_flag_width"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintStart_toEndOf="@id/whiteSide"
            app:layout_constraintTop_toTopOf="parent">

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/green_madagascar" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/red_madagascar" />
        </LinearLayout>

        <View
            android:id="@+id/whiteSide"
            android:layout_width="@dimen/madagascar_white_side_width"
            android:layout_height="match_parent"
            android:background="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/thailand"
        android:layout_width="@dimen/standard_flag_length"
        android:layout_height="@dimen/standard_flag_width"
        android:layout_marginStart="@dimen/default_margin"
        android:layout_marginTop="@dimen/default_margin"
        android:orientation="vertical"
        app:layout_constraintStart_toEndOf="@id/madagascar"
        app:layout_constraintTop_toBottomOf="@id/colombia">

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:background="@color/red_thailand" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:background="@color/white_thailand" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/blue_thailand" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:background="@color/white_thailand" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:background="@color/red_thailand" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/denmark"
        android:layout_width="@dimen/standard_flag_length"
        android:layout_height="@dimen/standard_flag_width"
        android:layout_marginStart="@dimen/default_margin"
        android:layout_marginTop="@dimen/default_margin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/madagascar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:background="@color/red_denmark" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/white" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:background="@color/red_denmark" />
        </LinearLayout>

        <View
            android:layout_width="@dimen/cross_width_denmark"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:layout_marginStart="@dimen/denmark_edge_to_cross_distance"
            android:background="@color/white" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/switzerland"
        android:layout_width="@dimen/standard_flag_width"
        android:layout_height="@dimen/standard_flag_width"
        android:layout_marginStart="@dimen/default_margin"
        android:layout_marginTop="@dimen/default_margin"
        android:background="@color/red_switzerland"
        app:layout_constraintStart_toEndOf="@id/denmark"
        app:layout_constraintTop_toBottomOf="@id/thailand">

        <View
            android:layout_width="@dimen/switzerland_cross_width"
            android:layout_height="@dimen/switzerland_cross_length"
            android:layout_gravity="center"
            android:background="@color/white" />

        <View
            android:layout_width="@dimen/switzerland_cross_length"
            android:layout_height="@dimen/switzerland_cross_width"
            android:layout_gravity="center"
            android:background="@color/white" />

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>